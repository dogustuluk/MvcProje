@model IEnumerable<EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2> Burası index</h2>
        <br />

        <table>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
            </tr>
            @foreach(var item in Model) //'@' konulması razor syntax'idir.
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
