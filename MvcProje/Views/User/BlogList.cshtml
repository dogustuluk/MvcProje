@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
@{ string color = ""; string degree = ""; string progressBar = ""; int blogRating = 1;}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">
            

            <div class="card-header">

                <h3 class="card-title">Bloglarım</h3>

                
                <div class="card-tools">
                   
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>
             <a href="/User/AddNewBlog/" class="btn btn-info">Yeni Blog Yaz</a>
            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>


                            <th style="width: 20%">

                                Blog Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            blogRating = item.BlogRating * 10;
                            if (blogRating >= 90)
                            {
                                color = "post-category text-white bg-success mb-3";
                                degree = "Çok Başarılı";
                                progressBar = "progress-bar bg-green";

                            }
                            if (blogRating >= 70 && blogRating <= 89)
                            {
                                color = "post-category text-white bg-blue mb-3";
                                degree = "Başarılı";
                                progressBar = "progress-bar bg-blue";
                            }
                            if (blogRating >= 50 && blogRating <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                degree = "Yeterli";
                                progressBar = "progress-bar bg-yellow";
                            }
                            if (blogRating > 0 && blogRating <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                degree = "Başarısız";
                                progressBar = "progress-bar bg-red";
                            }
                            if (blogRating == 0)
                            {
                                color = "post-category text-white bg-black mb-3";
                                degree = "Oylanmamış Blog";

                            }



                            <tr>

                                <td> @item.BlogId </td>

                                <td> @item.BlogTitle </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar @progressBar" role="progressbar" aria-valuenow="10"
                                             aria-volumemin="0" aria-volumemax="10" style="width: @blogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan: @blogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge @color">@degree</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>